package fudamentos;

public class TiposPrimitivos {
	public static void main(String[] args) {
		//Informações do fucionario
		//Tipos numericos
		byte anosDeEmpresa = 23;
		short numerosDeVoos = 542; //Ida e Volta
		int id = 56789;
		long pontosAcumulados = 2_134_845_223;
		
		//Tipos numéricos reais
		float salario = 11_445.44F;
		double vendasAcumuladas = 2_991_797_103.01;
		
		//Tipo booleano
		boolean estaDeFerias = false; //true
		
		//Tipo caracter
		char status = 'A'; //ativo
		
		//dias de empresas
		System.out.println(anosDeEmpresa * 365 + " Dias trabalhados.");
		
		//numeros de viajens
		System.out.println("Voce tem " + numerosDeVoos / 2 + "viajens completas Ida e Volta" );
	}
}
