package fudamentos;

public class NotacaoPonto {
	public static void main(String[] args) {
		String s = "Bom dia x";
		s = s.replace("x", "senhora");
		s.toUpperCase();
		s = s.toUpperCase();
		s = s.concat("!!!");
		
		System.out.println("tales".toUpperCase());
		
		//ou posso tamben declara uma variavel
		
		String t = "tales".toUpperCase();
		System.out.println(t);
		
		
		System.out.println(s);
		
		//tambem posso declara tudo na mesma linha 
		
		String y = "Bon dia x ".replace("x","tales").toUpperCase().concat("!!!");
		System.out.println(y);
	}
}
